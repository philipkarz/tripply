<h1><%= user.name %>'s Profile Page</h1>

<ul>
trips: <%for (var i = 0; i < trips.length; i++) { %>
    <li><%= trips[i].name %> - <%= trips[i].locale %> </li>
    <% } %>
</ul>

<form action="/users/profile/edit">
    <button type="submit" id="update">Edit Profile</button>
</form>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
   Create Trip
  </button>
  
  
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <form action="/users/profile">
             <div class="form-group">
                 <label for="name">Trip Name</label>
                 <input type="text" class="form-control" name="name">
                 <label for="name">Trip Length</label>
                 <input type="number" class="form-control" name="length">
                 <label for="name">Trip Location</label>
                 <input type="text" class="form-control" name="locale">
            </div>   
            </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Add Trip</button>
        </div>
      </div>
    </div>
  </div>